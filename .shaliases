# Gdb aliases:
alias GDBFrontend='~/Repos/gdb-frontend/gdbfrontend -g $(realpath ~/Repos/gdb-[0-9][0-9].[0-9]/build/gdb/gdb) -G --data-directory=$(realpath ~/Repos/gdb-[0-9][0-9].[0-9]/build/gdb/data-directory/)'
